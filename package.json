{
	"name": "@natlibfi/melinda-rest-api",
	"description": "RESTful API for Melinda",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-rest-api",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-rest-api/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-rest-api.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
		"start": "node ./dist/index",
		"prepublishOnly": "npm run build",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test nyc mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/**/*.spec.js && npm run coverage",
		"test:dev": "npm run lint:dev && npm run test:base -- src/**/*.spec.js && npm run coverage",
		"coverage": "nyc check-coverage --per-file",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist --minified",
		"build:dev": "npm run build && npm run check-deps",
		"watch": "cross-env NODE_ENV=test chokidar src -c 'npm run test:dev && npm run coverage'"
	},
	"dependencies": {
		"@natlibfi/fixura": "^1.0.0",
		"@natlibfi/marc-record": "^4.0.4",
		"@natlibfi/marc-record-serializers": "^5.0.1",
		"@natlibfi/marc-record-validate": "^5.0.1",
		"@natlibfi/marc-record-validators-melinda": "^8.2.2",
		"@natlibfi/melinda-commons": "^7.3.3",
		"body-parser": "^1.19.0",
		"deep-eql": "^4.0.0",
		"express": "^4.17.1",
		"http-status": "^1.4.2",
		"moment": "^2.24.0",
		"node-fetch": "^2.6.0",
		"passport": ">=0.4.1 <1.0.0",
		"passport-http": ">=0.3.0 <1.0.0",
		"synaptic": "^1.1.4",
		"xmldom": "^>=0.3.0 <1.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.8.7",
		"@babel/node": "^7.8.7",
		"@babel/preset-env": "^7.8.7",
		"@babel/register": "^7.8.6",
		"babel-plugin-istanbul": "^6.0.0",
		"chai": "^4.2.0",
		"chokidar-cli": "^2.1.0",
		"cross-env": "^7.0.2",
		"eslint": "^6.8.0",
		"@natlibfi/eslint-config-melinda-backend": ">1.0.0-alpha.1",
		"eslint-plugin-import": "^2.20.1",
		"istanbul": ">=0.4.5 <1.0.0",
		"mocha": "^7.1.0",
		"nock": "^12.0.2",
		"npm-check": "^5.9.2",
		"nyc": "^15.0.0",
		"sinon": "^9.0.1",
		"sinon-chai": "^3.5.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "12"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"**/*.spec.js"
		],
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
