{
	"name": "@natlibfi/melinda-rest-api",
	"description": "RESTful API for Melinda",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-rest-api",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-rest-api/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-rest-api.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"start": "node ./dist/index",
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check;exit 0",
		"lint:base": "eslint --fix",
		"lint": "npm run lint:base -- src",
		"test:base": "cross-env NODE_ENV=test nyc mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/**/*.spec.js && npm run coverage",
		"coverage": "nyc check-coverage --per-file",
		"build:transpile": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist --minified",
		"build": "npm run build:transpile && npm run check-deps",
		"watch": "cross-env NODE_ENV=test chokidar src -c 'npm test && npm run coverage'",
		"publish-to-npm": "npm install && npm test && npm run coverage && npm publish --access=public"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^4.0.1",
		"@natlibfi/marc-record-serializers": "^3.0.5",
		"@natlibfi/marc-record-validate": "^4.0.0",
		"@natlibfi/marc-record-validators-melinda": "^5.1.2",
		"@natlibfi/melinda-commons": "^3.2.0",
		"body-parser": "^1.18.3",
		"deep-eql": "^4.0.0",
		"express": "^4.16.4",
		"express-ip-filter": "^2.0.0",
		"express-winston": "^3.0.1",
		"http-status": "^1.3.1",
		"moment": "^2.23.0",
		"node-fetch": "^2.3.0",
		"passport": ">=0.4.0 <1.0.0",
		"passport-http": ">=0.3.0 <1.0.0",
		"synaptic": "^1.1.4",
		"winston": "^3.1.0",
		"xmldom": "^>=0.1.27 <1.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.0",
		"@babel/core": "^7.2.2",
		"@babel/node": "^7.2.2",
		"@babel/preset-env": "^7.2.0",
		"@babel/register": "^7.0.0",
		"babel-eslint": "^10.0.1",
		"babel-plugin-istanbul": "^5.1.0",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.2.0",
		"chokidar-cli": "^1.2.1",
		"cross-env": "^5.2.0",
		"eslint": "^5.9.0",
		"eslint-config-xo": ">=0.25.0 <1.0.0",
		"eslint-plugin-import": "^2.14.0",
		"istanbul": ">=0.4.5 <1.0.0",
		"mocha": "^5.2.0",
		"nock": "^10.0.3",
		"npm-check": "^5.9.0",
		"nyc": "^13.1.0",
		"sinon": "^7.2.2",
		"sinon-chai": "^3.3.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		},
		"env": {
			"mocha": true
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"**/*.spec.js"
		],
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
